        <ed:Arc ArcThickness="1" ArcThicknessUnit="Percent" EndAngle="360" Fill="#FF4BEE43" Height="53.832" Canvas.Left="193.228" Stretch="None" Stroke="Black" StartAngle="90" Canvas.Top="191.02" Width="60.594"/>
