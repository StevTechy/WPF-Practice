<Window x:Class="WPF_Practice.Animation.Animation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Practice.Animation"
        mc:Ignorable="d"
        Title="Animation" Height="300" Width="300">
    <Canvas Name="mainCanvas">
        <Ellipse
            Name="ellipse"
            HorizontalAlignment="Left" 
            Canvas.Top="0"
            Canvas.Left="0"
            Height="50" 
            Stroke="#FF4F4F4F"
            VerticalAlignment="Top"
            Width="50">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF171717" Offset="0.121"/>
                    <GradientStop Color="#FFA23737" Offset="1"/>
                    <GradientStop Color="#FF3E724C" Offset="0.657"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>

</Window>
