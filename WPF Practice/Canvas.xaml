<Page x:Class="WPF_Practice.Canvas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Practice"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Canvas">

    <Canvas>
        <Rectangle Canvas.Left="25" Canvas.Top="25" Width="50" Height="40" Fill="Red"></Rectangle>
        <Rectangle Canvas.Left="100" Canvas.Top="25" Width="50" Height="40" Fill="BlanchedAlmond"></Rectangle>
        <Ellipse Canvas.Left="25" Canvas.Top="100" Width="200" Height="200" Fill="Green"></Ellipse>
    </Canvas>
</Page>
