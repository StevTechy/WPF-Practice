<Page x:Class="WPF_Practice.DockPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Practice"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DockPanel">

    <DockPanel>
        <Button Height="25" Width="50" Background="Red" DockPanel.Dock="Top"></Button>
        <Button Height="25" Width="50" Background="Orange" DockPanel.Dock="Left"></Button>
        <Button Height="25" Width="50" Background="Yellow" DockPanel.Dock="Right"></Button>
        <Button Height="25" Width="50" Background="Green" DockPanel.Dock="Bottom"></Button>
    </DockPanel>
</Page>
