        <Rectangle Fill="BurlyWood" Width="50" Height="50"></Rectangle>
        <Rectangle Fill="Aquamarine" Width="50" Height="50"></Rectangle>
        <Rectangle Fill="Lavender" Width="50" Height="50"></Rectangle>
        <Rectangle Fill="WhiteSmoke" Width="50" Height="50"></Rectangle>
        <Rectangle Fill="SteelBlue" Width="50" Height="50"></Rectangle>
        <Rectangle Fill="Cyan" Width="50" Height="50"></Rectangle>
    </WrapPanel>
</Page>
